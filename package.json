{
  "name": "aura-ecommerce",
  "version": "1.0.0",
  "description": "A premium, AI-integrated e-commerce platform with minimalist design",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "lint": "eslint server/**/*.js",
    "test": "echo \"no tests specified\" && exit 0",
    "start:test": "PORT=5000 node server/index.js",
    "test:e2e": "echo 'Skipping E2E tests in CI' && exit 0",
    "test:run": "node tests/razorpay-e2e.test.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "echo \"Server build complete\"",
    "build:all": "npm run build:server && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "npm run migrate && node server/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "seed": "node scripts/migrate-db.js",
    "migrate": "node scripts/populate-products.js",
    "health": "curl -f http://localhost:3000/api/health",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh test",
    "deploy:build": "./scripts/deploy-production.sh build",
    "deploy:health": "./scripts/deploy-production.sh health",
    "deploy:logs": "./scripts/deploy-production.sh logs",
    "deploy:restart": "./scripts/deploy-production.sh restart"
  },
  "keywords": [
    "ecommerce",
    "mern",
    "ai",
    "minimalist",
    "design"
  ],
  "author": "Aura Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.10.0",
    "@shopify/shopify-api": "^11.14.1",
    "autocannon": "^8.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.0.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.9.4",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "razorpay": "^2.9.6",
    "stripe": "^18.5.0",
    "uuid": "8.3.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "artillery": "^2.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.37.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "start-server-and-test": "^2.1.2"
  }
}
