# Sastabazar E-commerce Production Environment Configuration

# =============================================================================
# REQUIRED CONFIGURATION - MUST BE SET FOR PRODUCTION
# =============================================================================

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sastabazar?retryWrites=true&w=majority

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters-long

# Server Configuration
PORT=5000
NODE_ENV=production

# URLs Configuration (REQUIRED FOR PRODUCTION)
CLIENT_URL=https://your-domain.com
SERVER_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION (REQUIRED FOR PAYMENTS)
# =============================================================================

# Razorpay Configuration (REQUIRED FOR RAZORPAY PAYMENTS)
RAZORPAY_KEY_ID=rzp_live_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe Configuration (REQUIRED FOR STRIPE PAYMENTS)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/sastabazar.log

# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sastabazar.com

# =============================================================================
# AI SERVICES CONFIGURATION (Optional)
# =============================================================================

OPENAI_API_KEY=your-openai-api-key
GOOGLE_VISION_API_KEY=your-google-vision-api-key
ENABLE_AI_FEATURES=false

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=false
ENABLE_METRICS=false
METRICS_PORT=9090



